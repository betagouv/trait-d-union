{
  "name": "traitdunion-api",
  "version": "0.2.0",
  "description": "API de Trait d'Union - Version 2 - PMSMP",
  "main": "bin/start.js",
  "repository": "git@github.com:betagouv/trait-d-union.git",
  "author": "Trait d'Union",
  "license": "MIT",
  "private": false,
  "engines": {
    "node": "12.13.x",
    "yarn": "1.21.x"
  },
  "dependencies": {
    "@hapi/boom": "8.0.1",
    "@hapi/cookie": "10.1.2",
    "@hapi/hapi": "19.1.1",
    "@hapi/inert": "5.2.2",
    "@hapi/joi": "16.1.7",
    "@hapi/joi-date": "2.0.1",
    "@hapi/vision": "5.5.4",
    "camelcase": "5.3.1",
    "envie": "3.0.0-alpha",
    "got": "9.6.0",
    "hapi-cors": "1.0.3",
    "hapi-pino": "6.3.0",
    "hapi-require-https": "4.0.0",
    "hapi-swaggered": "3.0.3",
    "hapi-swaggered-ui": "https://github.com/HEYGUL/hapi-swaggered-ui#master",
    "lru-cache": "5.1.1",
    "luxon": "1.21.3",
    "nock": "11.7.0",
    "node-schedule": "1.3.2",
    "node-slack": "0.0.7",
    "passport": "0.4.0",
    "passport-local": "1.0.0",
    "passport-local-sequelize": "0.9.0",
    "pg": "7.12.1",
    "pino": "5.13.6",
    "pino-pretty": "3.3.0",
    "request-promise-native": "1.0.8",
    "sendin_blue_api": "git+https://github.com/HEYGUL/APIv3-nodejs-library.git",
    "sequelize": "5.21.2",
    "sequelize-cli": "5.5.1",
    "sequelize-replace-enum-postgres": "1.5.0",
    "uppercamelcase": "3.0.0"
  },
  "scripts": {
    "display:help": "PORT=42 node bin/start.js -h",
    "postdeploy": "yarn migrate:up --env production && yarn seed:all --env production",
    "start": "node bin/start.js",
    "dev": "docker-compose up",
    "start:e2e": "AUTH0_BASE_URL=http://localhost:3333 E2E_TEST=true docker-compose up",
    "start:e2e:pre-push": "AUTH0_BASE_URL=http://localhost:3333 E2E_TEST=true docker-compose up &",
    "stop": "docker-compose stop",
    "seed:all": "sequelize db:seed:all",
    "seed:undo:all": "sequelize db:seed:undo:all",
    "lint": "eslint .",
    "lint:fix": "eslint --fix",
    "test": "NODE_ENV=test nyc -r text -r html -r lcov mocha src/**/**/**/**/*test.js",
    "test:e2e": "yarn e2e:db:drop ; yarn e2e:db:create && yarn e2e:db:migrate && yarn e2e:seed && yarn e2e:test:run",
    "e2e:test:run": "cucumber-js features/**/*.feature --require features/steps.js --format node_modules/cucumber-pretty",
    "e2e:db:create": "yarn sequelize db:create --env local-e2e",
    "e2e:db:migrate": "yarn sequelize db:migrate --env local-e2e",
    "e2e:seed": "yarn seed:all --env local-e2e && E2E_SEEDS=true yarn seed:all --env local-e2e",
    "e2e:db:drop": "yarn sequelize db:drop --env local-e2e",
    "migrate:up": "sequelize db:migrate",
    "migrate:down": "sequelize db:migrate:undo"
  },
  "devDependencies": {
    "body-parser": "1.19.0",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "cors": "2.8.5",
    "cucumber": "6.0.5",
    "cucumber-pretty": "6.0.0",
    "dirty-chai": "2.0.1",
    "eslint": "6.6.0",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-mocha": "6.2.1",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "express": "4.17.1",
    "get-json": "1.0.1",
    "mocha": "6.2.2",
    "mock-jwks": "0.2.0",
    "node-dev": "4.0.0",
    "nyc": "14.1.1",
    "sinon": "7.5.0",
    "sinon-chai": "3.3.0"
  }
}
